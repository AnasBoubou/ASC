version: '3.8'

services:
  traefik:
    image: traefik:v2.10
    command:
      - "--api.insecure=true"        # Active l'interface de gestion (dashboard)
      - "--providers.docker=true"
      - "--providers.docker.swarmMode=true" # Indispensable pour le Swarm
      - "--entrypoints.web.address=:80"     # Ã‰coute sur le port 80
    ports:
      - "80:80"
      - "8080:8080"
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock:ro"
    networks:
      - traefik-public
    deploy:
      placement:
        constraints:
          - node.role == manager

networks:
  traefik-public:
    external: true
